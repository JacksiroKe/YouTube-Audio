<com.sothree.slidinguppanel.SlidingUpPanelLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:sothree="http://schemas.android.com/apk/res-auto"
    android:id="@+id/sliding_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="bottom"
    sothree:umanoDragView="@+id/fl_drag_handle"
    sothree:umanoOverlay="false"
    sothree:umanoPanelHeight="60dp"
    sothree:umanoParallaxOffset="200dp"
    sothree:umanoScrollableView="@+id/rv_generic"
    sothree:umanoShadowHeight="4dp">


    <!--FRAGMENT PLACEHOLDER WITH TOOLBAR-->
    <include layout="@layout/layout_main" />
    <!--BOTTOM PLAYER CONTENT WITH PLAYLIST-->
    <include layout="@layout/layout_sliding_player" />

</com.sothree.slidinguppanel.SlidingUpPanelLayout>